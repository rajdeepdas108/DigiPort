  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@popperjs/core@2/dist/umd/popper.min.js">
  <style>
    /* 3D Header Style */
    header {
      perspective: 1000px;
    }

    header img {
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3), 0 6px 6px rgba(0, 0, 0, 0.23);
      transform: rotateY(-15deg);
      transition: transform 0.5s, box-shadow 0.5s;
    }

    header img:hover {
      transform: rotateY(0deg);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 8px 8px rgba(0, 0, 0, 0.26);
    }

    /* 3D Buttons */
    button {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3), 0 1px 3px rgba(0, 0, 0, 0.12);
      transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    button:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 12px rgba(0, 0, 0, 0.35), 0 2px 4px rgba(0, 0, 0, 0.22);
    }

    /* 3D Cards */
    .w3-ul li {
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2), 0 2px 4px rgba(0, 0, 0, 0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .w3-ul li:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25), 0 4px 8px rgba(0, 0, 0, 0.18);
    }

    /* 3D Image Grid */
    .column img {
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2), 0 5px 10px rgba(0, 0, 0, 0.15);
      transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

    .column img:hover {
      transform: scale(1.1) rotate(2deg);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3), 0 10px 20px rgba(0, 0, 0, 0.25);
    }

    /* Smooth Scroll Effect */
    html {
      scroll-behavior: smooth;
    }
  </style>
</head>
